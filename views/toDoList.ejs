<%- include("header"); -%>

    <div class="box" id="heading">
        <h1>ToDo List for <%= dayOfWeek %> </h1>
    </div>

    <div class="box">
        <% for(var i = 0; i < newItems.length; i++) {  %>
            <div class="item">
                <input type="checkbox" name="" id="">
                <p><%= newItems[i] %></p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newListItem"  placeholder="new list item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>

    <%- include("footer"); -%>